@model ArtistsViewModel

@if (Model.NewArtist != null)
{
    <div class="alert alert-success" role="alert">
        The Artist '@Model.NewArtist.Name' has been created successfully!
    </div>

    <br />
}

<form action="~/Artists/Add" method="Post">

    <div class="mb-3">
        <label for="name" class="form-label">Artist's Name</label>
        <input type="text" class="form-control" id="name" name="Name">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>
